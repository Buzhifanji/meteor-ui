{
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "dist",
        "sourceMap": false,
        "target": "es2016",
        "useDefineForClassFields": false,
        "module": "esnext",
        "moduleResolution": "node",
        "allowJs": false,
        "strict": true,
        "noUnusedLocals": true,
        "experimentalDecorators": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "removeComments": false,
        "jsx": "preserve",
        "lib": ["esnext", "dom"],
        "types": ["node"],
        "rootDir": ".",
        "paths": {
            "@vanilla-ui/type": ["packages/*/type"],
            "@vanilla-ui/": ["packages/"],
        }
    },
    "include": [
        "packages/**/*",
    ],
    "exclude": ["node_modules", "dist", "scripts"]
}